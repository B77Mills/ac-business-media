$ const { site } = out.global;
$ const {
  id,
  alias,
  name,
  pageNode
} = data;
$ const now = Date.now();

<refresh-theme-website-section-published-content-layout
  id=id
  alias=alias
  name=name
  page-node=pageNode
>
  <@query
    name="website-scheduled-content"
    params={
      includeContentTypes: ["Event"],
      limit: 12,
      endingAfter: now,
      sort: { field: "startDate", order: "asc" }
    }
  />
</refresh-theme-website-section-published-content-layout>
