<default-theme-hero-flow nodes=input.nodes>
  <@hero|{ node }|>
    <website-content-card-node node=node image-width=600 title-modifiers=["large"] />
  </@hero>
  <@list|{ nodes }|>
    <website-content-list-flow
      nodes=nodes
      ...input.list
    >
      <@node>
        <@image use-placeholder=false />
        <@title modifiers=["small"] />
      </@node>
    </website-content-list-flow>
  </@list>
</default-theme-hero-flow>
